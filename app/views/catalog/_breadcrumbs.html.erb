<% if @category -%>
  <div class="breadcrumbs">
    <span><%= link_to "Каталог", catalog_path(:filter => params[:filter]) %></span>
    
    <% @category.self_and_ancestors.each do |cat| -%>
      &nbsp;/&nbsp
      <span class="<%= 'current' if !@good && cat == @category %>"><%= link_to cat.name, category_path(:path => cat.url_path, :filter => params[:filter]) %></span>
    <% end -%>
    <% if @good -%>
      &nbsp;/&nbsp
      <span class="current"><%= @good.name %></span>
    <% end -%>
  </div>
<% end -%>